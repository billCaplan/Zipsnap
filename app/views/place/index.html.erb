<div class="center">


  <h1>Welcome to <%= @cityName %> </h1>
<br>

<div class="row">
  <div class="col-sm-6 panel" id="ZipCodeApi">
    <div class="panel-heading">
      Basic Info
    </div>
    <div class="panel-body">
      <%= @zipCode %>
      <br>
      <%= @latitude %>
      <br>
      <%= @longitude %>
      <br>
      <%= @cityName %>
      <br>
      <%= @usaState %>
      <br>
    </div>
  </div>

  <div class="col-sm-6 panel" id="weatherApi">
    <div class="panel-heading">
      Weather Info
    </div>
    <div class="panel-body">
      Current Temperature: <%= @currentTemperature %>
      <br>
      Today's Low: <%= @currentMinTemperature %>
      <br>
      Today's High: <%= @currentMaxTemperature %>
      <br>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 panel" id="zomatoApi">
    <div class="panel-heading">
      Restaurant and Food Info
    </div>
    <div class="panel-body">
    Top Food Types:
    <ul class="list-group">
    <% @topCuisines.each do |food| %>
      <li class="list-group-item"><%=food %></li>

    <% end%>
    </ul>
  </div>
  </div>

  <div class="col-sm-6 panel" id="ticketmasterApi">

    <% if @ticketmasterEventsList%>
    <div class="panel-heading">
      Upcoming Ticketmaster Events
    </div>
    <div class="panel-body">
    <% @ticketmasterEventsList.each do |event| %>
       <%= event["name"] %> on <%= event["dates"]["start"]["localDate"] %> at <%= event["_embedded"]["venues"][0]["name"] %>
       <br>
    <%end %>
      <%end %>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 panel" id="googleMapsApi">
    <div class="panel-heading">

    </div>
    <div class="panel-body">

    </div>
  </div>

  <div class="col-sm-6 panel" id="newYorkTimesApi">
    <div class="panel-heading">
      News from around here
    </div>
    <div class="panel-body">

    </div>
</div>



</div>
